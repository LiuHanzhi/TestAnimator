<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/left"
        android:layout_width="0pt"
        android:layout_height="match_parent"
        android:background="#ff0000"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/carousel_spacing" />

    <View
        android:id="@+id/carousel_spacing"
        android:layout_width="28pt"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintLeft_toRightOf="@+id/left"
        app:layout_constraintRight_toLeftOf="@id/home_list_indicator1" />

    <View
        android:id="@+id/home_list_indicator1"
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:background="#fff000"
        app:layout_constraintBottom_toTopOf="@id/home_list_indicator2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/carousel_spacing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/home_list_indicator2"
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:background="#ff0ff0"
        app:layout_constraintBottom_toTopOf="@id/home_list_indicator3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/carousel_spacing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_list_indicator1"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/home_list_indicator3"
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:background="#5fffff"
        app:layout_constraintBottom_toTopOf="@id/home_list_indicator4"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/carousel_spacing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_list_indicator2"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/home_list_indicator4"
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:background="#0ff000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/carousel_spacing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_list_indicator3"
        app:layout_constraintVertical_weight="1" />


</android.support.constraint.ConstraintLayout>